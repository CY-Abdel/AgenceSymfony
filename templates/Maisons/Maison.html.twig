{% extends "base.html.twig" %}

{% block title 'Nos maisons en vente' %}

{% block body %}
<div class="jumbotron">
     <div class="container">
        {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col-md-5">
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col-md-5">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
     </div>
</div>
    <div class="container">
        <h1 class="text-center">Bienvenu dans notre site de vente</h1>
        <h2>Voir toutes nos maisons</h2>

        <div class="row">
            {% for property in properties %}
                <div class="col-md-4">
                    {% include 'Maisons/_property.html.twig' %}
                </div>
            {% endfor %} 
        </div>
        <div class="pagination justify-content-center">
            {{ knp_pagination_render(properties) }} 
        </div>
    </div>
{% endblock %}